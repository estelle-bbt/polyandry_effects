@article{stanton_consequences_1991,
	title = {{CONSEQUENCES} {OF} {FLORAL} {VARIATION} {FOR} {MALE} {AND} {FEMALE} {REPRODUCTION} {IN} {EXPERIMENTAL} {POPULATIONS} {OF} {WILD} {RADISH}, \textit{{RAPHANUS}} {SATIVUS} {L}},
