	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1111/j.1469-8137.2005.01619.x},
	keywords = {Silene, Caryophyllaceae, Hadena and Perizoma, moths, mutualism, nursery pollination, parasitism, seed predators},
	pages = {667--680},
	file = {Full Text PDF:/home/estelle.barbot/snap/zotero-snap/common/Zotero/storage/RD9RU8I8/Kephart et al. - 2006 - Pollination and seed predation by moths on Silene .pdf:application/pdf;Snapshot:/home/estelle.barbot/snap/zotero-snap/common/Zotero/storage/GVAKB33A/j.1469-8137.2005.01619.html:text/html},
