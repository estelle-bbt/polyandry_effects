	author = {Lankinen, Åsa and Smith, Henrik G. and Andersson, Stefan and Madjidian, Josefin A.},
	year = {2016},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.3732/ajb.1500148},
	keywords = {sexual selection, Collinsia heterophylla, cryptic self-incompatibility, mating system evolution, mixed mating, Plantaginaceae, pollen competition, sexual conflict, timing of stigma receptivity},
	pages = {541--552},
	file = {Full Text PDF:/home/estelle.barbot/snap/zotero-snap/common/Zotero/storage/8L7FE9I6/Lankinen et al. - 2016 - Selection on pollen and pistil traits during pollen competition is affected by both sexual conflict.pdf:application/pdf;Snapshot:/home/estelle.barbot/snap/zotero-snap/common/Zotero/storage/E4EUYUII/ajb.html:text/html},
