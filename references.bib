	pages = {1320--1331},
	file = {Full Text PDF:/home/estelle.barbot/snap/zotero-snap/common/Zotero/storage/EPUAAHIA/Pélissié et al. - 2014 - DISENTANGLING PRECOPULATORY AND POSTCOPULATORY SEXUAL SELECTION IN POLYANDROUS SPECIES.pdf:application/pdf;Snapshot:/home/estelle.barbot/snap/zotero-snap/common/Zotero/storage/T4YA8T3W/6851844.html:text/html},
