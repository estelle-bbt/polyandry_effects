	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1111/j.1365-2664.2009.01700.x},
	keywords = {apidae, Brassica, diptera, hymenoptera, syrphidae, unmanaged, wild},
	pages = {1080--1087},
