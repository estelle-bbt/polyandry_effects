	number = {6},
	urldate = {2024-05-17},
	journal = {American Journal of Botany},
	author = {Rodríguez-Otero, Cristina and Hedrén, Mikael and Friberg, Magne and Opedal, Øystein H.},
	year = {2023},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1002/ajb2.16128},
	keywords = {path analysis, plant–pollinator interactions, food deception, phenotypic selection, selection gradient},
