@article{peterson_simplified_2010,
	title = {A simplified method for differential staining of aborted and non-aborted pollen grains},
	volume = {1},
	issn = {2037-0164, 2037-0156},
	url = {http://www.pagepress.org/journals/index.php/pb/article/view/pb.2010.e13},
