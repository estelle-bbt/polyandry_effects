	keywords = {pollen deposition, pollen quality, pollination efficiency, pollinator effectiveness, pollinator performance, seed set, visit frequency},
	pages = {435--451},
	file = {Full Text PDF:/home/estelle.barbot/snap/zotero-snap/common/Zotero/storage/9LSBRBLY/Ne'eman et al. - 2010 - A framework for comparing pollinator performance .pdf:application/pdf;Snapshot:/home/estelle.barbot/snap/zotero-snap/common/Zotero/storage/UC9H7AEG/j.1469-185X.2009.00108.html:text/html},
