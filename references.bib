	file = {Full Text PDF:/home/estelle.barbot/snap/zotero-snap/common/Zotero/storage/HHCFEHLU/Moquet et al. - 2022 - Effects of sexual dimorphism on pollinator behavio.pdf:application/pdf;Snapshot:/home/estelle.barbot/snap/zotero-snap/common/Zotero/storage/G42YFHDL/oik.html:text/html},
