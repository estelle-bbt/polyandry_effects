@article{amorim_beyond_2013,
	title = {Beyond the pollination syndrome: nectar ecology and the role of diurnal and nocturnal pollinators in the reproductive success of {Inga} sessilis ({Fabaceae})},
	volume = {15},
	issn = {1438-8677},
