@article{levitan_densitydependent_2004,
	title = {Density‐dependent sexual selection in external fertilizers: variances in male and female fertilization success along the continuum from sperm limitation to sexual conflict in the sea urchin \textit{{Strongylocentrotus}} franciscanus},
